# FUNCTIONS
# use with p""
def resolvepath(p):
    pth = str(pathlib.Path(p).resolve())
    dir = path.dirname(pth)
    basename = path.basename(pth)
    filename, ext = path.splitext(basename)
    return (pth,dir,basename,filename,ext)

 

